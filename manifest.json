{
  "manifest_version": 3,
  "name": "Extension Organizer",
  "description": "Manage and categorize your Chrome extensions easily.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "management",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icons/icon48.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
